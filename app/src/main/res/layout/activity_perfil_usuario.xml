<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fundo"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="705dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imageView_foto_perfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_shape"
            android:clickable="true"
            android:clipToOutline="true"
            android:contentDescription="Foto de Perfil"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_profile_picture" />

        <Button
            android:id="@+id/btn_salvar_foto_perfil_galeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#DBB7B7"
            android:text="Salvar Foto na Galeria"
            android:textSize="16sp"
            android:background="@drawable/bg_button_square"/>


        <EditText
            android:id="@+id/nome_completo_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:hint="Nome Completo"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nome_usuario_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nome de Usuário"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/senha_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nova Senha (caso queira)"
            android:inputType="textPassword"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_salvar_alteracoes_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="#DBB7B7"
            android:text="Salvar Alterações"
            android:textSize="18sp"
            android:background="@drawable/bg_button_square"/>

        <Button
            android:id="@+id/btn_excluir_conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Excluir Conta"
            android:textColor="#DBB7B7"
            android:textSize="18sp"
            android:background="@drawable/bg_button_square"/>

    </LinearLayout>

</LinearLayout>