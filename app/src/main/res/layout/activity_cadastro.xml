<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fundo"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_cadastro"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="48dp"
            app:srcCompat="@drawable/logo"
            android:contentDescription="@string/app_name" />

        <EditText
            android:id="@+id/nome_completo_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nome_usuario_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome de UsuÃ¡rio"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/senha_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirmar_senha_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:textColor="#DBB7B7"
            android:textColorHint="#DBB7B7"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar Conta"
            android:textColor="#DBB7B7"
            android:textSize="18sp"
            android:background="@drawable/bg_button_square"/>

    </LinearLayout>
</ScrollView>
