<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fundo"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="50dp"
            android:text="Novo Registro"
            android:textColor="#DBB7B7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Data e Hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: 01/01/2025"
                    android:textColor="#DBB7B7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora: 10:30"
                    android:textColor="#DBB7B7"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Valor da Glicemia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Valor da Glicemia (mg/dL)"
                android:textColor="#DBB7B7"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextGlicemia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ex: 95"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#DBB7B7"
                android:textColorHint="#DBB7B7"
                android:textSize="16sp"/>

            <!-- Status -->
            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Status:"
                android:textColor="#DBB7B7"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Comentário -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Comentário (opcional)"
                android:textColor="#DBB7B7"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editTextComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:hint="Ex: Antes do café da manhã"
                android:minHeight="48dp"
                android:textColor="#DBB7B7"
                android:textColorHint="#DBB7B7"
                android:textSize="16sp"/>

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvarGlicemia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_square"
                android:text="Salvar Registro"
                android:textColor="#DBB7B7"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
